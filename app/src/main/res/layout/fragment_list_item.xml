<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/border"
    android:layout_marginBottom="5dp"
    tools:context=".ListItemFragment">

    <TextView
        android:id="@+id/list_index"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:text="1." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Kawerna: Rolnicy z JaskiÅ„ (2020)" />

            <TextView
                android:id = "@+id/game_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="top|center_horizontal"
                android:paddingTop="5dp"
                android:textSize="10dp"
                android:textStyle="italic"
                android:text="(Caverna: Cave Farmers)" />

        </LinearLayout>

            <ImageView
                android:id="@+id/game_thumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="thumbnail"
                android:layout_gravity="center"
                android:src="@mipmap/ic_game_foreground"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="centerCrop"/>




        <TextView
            android:id="@+id/rank_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="123" />

    </LinearLayout>

</FrameLayout>